{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://yourapp.com/usersBooks.schema.json",
  "type": "object",
  "properties": {
    "volumeId": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "thumbnail": {
      "type": ["string", "null"],
      "format": "uri"
    },
    "published_date": {
      "type": ["string", "null"],
      "pattern": "^[0-9]{4}(-[0-9]{2}){0,2}$"
    },
    "description": {
      "type": ["string", "null"],
      "minLength": 1
    }
  },
  "required": ["volumeId", "title", "authors"],
  "additionalProperties": false
}
